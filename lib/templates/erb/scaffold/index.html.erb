<%%= title t("<%= singular_table_name %>", scope: "activerecord.models").pluralize %>

<%%= link_to_new_resource(new_<%= singular_table_name %>_path, t(:create_model, model: t("<%= singular_table_name %>", scope: 'activerecord.models'))) %>

<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%%= t(:id, scope: "activerecord.attributes") %></th>
        <% attributes.each do |attribute| -%>
          <th scope="col"><%%= t(:<%= attribute.name %>, scope: "activerecord.attributes.<%= singular_table_name %>") %></th>
        <% end -%>
        <th colspan="3" scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <td class="align-middle"><%%= <%= singular_table_name %>.id %></td>
          <% attributes.each do |attribute| -%>
            <td class="align-middle"><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td class="align-middle">
            <%%= link_to <%= singular_table_name %>, title: t(:show), class: 'btn btn-default' do %>
              <i class="fas fa-file-alt"></i>
            <%% end -%>
          </td>
          <td class="align-middle">
            <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), title: t(:edit), class: 'btn btn-default' do %>
              <i class="fas fa-edit"></i>
            <%% end -%>
          </td>
          <td class="align-middle">
            <%%= link_to <%= singular_table_name %>, method: :delete, data: { confirm: "#{t(:are_you_sure)}?" }, title: t(:destroy), class: 'btn btn-danger' do %>
              <i class="fas fa-trash"></i>
            <%% end -%>
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>

<br/>
